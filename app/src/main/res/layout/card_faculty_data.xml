<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/admin_shape"
    android:padding="16dp"
    android:layout_marginBottom="10dp"
    android:layout_margin="5dp"
    android:hapticFeedbackEnabled="true"
    android:weightSum="1">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/faculty_view_image"
        android:layout_width="52dp"
        android:layout_height="50dp"
        android:src="@drawable/add_img"
        android:layout_gravity="center"
        android:layout_marginEnd="8dp"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/faculty_view_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/ubuntu"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Name" />

        <TextView
            android:id="@+id/faculty_view_email"
            android:layout_marginBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:fontFamily="@font/ubuntu"
            tools:text="Email"/>

        <TextView
            android:id="@+id/faculty_view_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:fontFamily="@font/ubuntu"
            tools:text="Subject"/>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDeleteFaculty"
        android:backgroundTint="#4F3281"
        android:text="DELETE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical" />

</LinearLayout>